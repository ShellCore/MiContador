<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/img_account"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_not_found" />

    <TextView
        android:id="@+id/txt_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_balance"
        android:layout_alignStart="@+id/txt_balance"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_dark" />

    <TextView
        android:id="@+id/txt_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_account"
        android:paddingTop="10dp"
        android:layout_toEndOf="@+id/img_account"
        android:text="$0."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_dark" />

    <TextView
        android:id="@+id/txt_cents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_balance"
        android:layout_toEndOf="@+id/txt_balance"
        android:text="00"
        android:textColor="@color/text_dark"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>